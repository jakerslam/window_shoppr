{
  "name": "deal-site_window-shoppr",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "npm run test:unit",
    "test:unit": "node --test tests/unit/**/*.test.mjs",
    "test:integration": "node --test tests/integration/**/*.test.mjs",
    "test:e2e": "node --test tests/e2e/**/*.test.mjs",
    "test:coverage": "node scripts/check-coverage.mjs",
    "db:check": "node scripts/check-migrations.mjs",
    "db:rehearsal-check": "node scripts/check-migration-rehearsal.mjs",
    "incident:check": "node scripts/check-incident-readiness.mjs",
    "security:check": "node scripts/security-check.mjs",
    "security:headers-runtime": "node scripts/check-security-headers-runtime.mjs",
    "security:audit-deps": "npm audit --audit-level=high --omit=dev",
    "backup:check": "node scripts/check-backup-restore-readiness.mjs",
    "supply-chain:check": "node scripts/check-supply-chain-hardening.mjs",
    "threat-model:check": "node scripts/check-threat-model-gate.mjs",
    "cost:check": "node scripts/check-cost-performance-guardrails.mjs",
    "api:drift-check": "node scripts/check-api-contract-drift.mjs",
    "feature-flags:check": "node scripts/check-feature-flag-lifecycle.mjs",
    "release:smoke": "node scripts/release-smoke.mjs",
    "audit:build": "NEXT_PUBLIC_BASE_PATH= NEXT_PUBLIC_SITE_URL=http://127.0.0.1:4173 npm run build",
    "audit:axe": "npm run audit:build && npx start-server-and-test \"npx http-server out -p 4173 -s\" http://127.0.0.1:4173 \"npx @axe-core/cli http://127.0.0.1:4173 --tags wcag2a,wcag2aa --tags wcag21a,wcag21aa\"",
    "audit:lighthouse": "npm run audit:build && npx lhci autorun --config=./lighthouserc.json",
    "audit:accessibility": "npm run audit:axe && npm run audit:lighthouse"
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "typescript": "^5"
  }
}
